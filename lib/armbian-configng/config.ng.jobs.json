                    "command": [
						"get_user_continue \"Verify that your Bluetooth device is discoverable!\" process_input ; connect_bt_interface"

                    ],
                    "show": false,
                    "status": "Active",
                    "doc_link": "",
                    "src_reference": "",
                    "author": ""
                },
                {
                    "id": "N03",
                    "description": "Install Infrared support",
                    "command": [
